---
podcast_id: loon-a-tick
permalink: podcast/loon-a-tick/feed/
---

<?xml version="1.0" encoding="UTF-8"?><rss version="2.0"
xmlns:content="http://purl.org/rss/1.0/modules/content/"
xmlns:wfw="http://wellformedweb.org/CommentAPI/"
xmlns:dc="http://purl.org/dc/elements/1.1/"
xmlns:atom="http://www.w3.org/2005/Atom"
xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
xmlns:rawvoice="http://www.rawvoice.com/rawvoiceRssModule/"
>

    {% for podcast in site.data.podcasts %}
        {% if podcast.podcast_id == page.podcast_id %}
            {% assign podcast = podcast %}
        {% endif %}
    {% endfor %}

    {% for speaker in site.data.speakers %}
        {% if speaker.speaker_id == podcast.speaker_id %}
            {% assign speaker = speaker %}
        {% endif %}
    {% endfor %}

    <channel>
        <title>{{ podcast.title }}</title>
        <atom:link href="{{ site.baseurl }}/{{ page.permalink }}" rel="self" type="application/rss+xml" />
        <link>{{ site.baseurl }}</link>
        <description>Bringing You The World of Sunnah</description>
        <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
        <language>en-US</language>
        <sy:updatePeriod>hourly</sy:updatePeriod>
        <sy:updateFrequency>1</sy:updateFrequency>
        <generator>http://jekyllrb.com/</generator>
        <itunes:summary>{{ podcast.description }}</itunes:summary>
        <itunes:author>{{ speaker.name }}</itunes:author>
        <itunes:explicit>no</itunes:explicit>
        <itunes:image href="{{ site.baseurl }}/{{ podcast.image }}" />
        <itunes:owner>
            <itunes:name>{{ site.podcast_owner }}</itunes:name>
            <itunes:email>{{ site.podcast_email }}</itunes:email>
        </itunes:owner>
        <managingEditor>{{ site.podcast_email }} ({{ site.podcast_owner }})</managingEditor>
        <itunes:subtitle>{{ podcast.description }}</itunes:subtitle>
        <image>
            <title>{{ podcast.title }}</title>
            <url>{{ site.baseurl }}/</url>
            <link>{{ site.baseurl }} </link>
        </image>
        {% for post in site.posts %}
            {% if post.podcast == 'loon-a-tick' %}
                <item>
                    <title><![CDATA[{{ post.title | cdata_escape }}]]></title>
                    <link>{{ site.url }}{{ post.url }}</link>
                    <pubDate>{{ post.date | date: "%a, %d %b %Y %T %z" }}</pubDate>
                    <dc:creator><![CDATA[{{ site.author | cdata_escape }}]]></dc:creator>
                    {% for category in post.categories %}
                    <category><![CDATA[{{ category | cdata_escape }}]]></category>
                    {% endfor %}
                    {% for category in post.tags %}
                    <category><![CDATA[{{ category | cdata_escape }}]]></category>
                    {% endfor %}
                    <guid isPermaLink="true">{% if post.pre_https %}http://joebuhlig.com{% else %}{{ site.url }}{% endif %}{{ post.url }}</guid>
                    <description>
                        <![CDATA[{{ post.excerpt | strip_html | truncatewords: 50 | expand_urls: site.url | cdata_escape }}]]>
                    </description>
                    <content:encoded>
                        <![CDATA[<img class="featured-image" src="{{ post.image | prepend: site.url }}" />{{ post.content | expand_urls: site.url | cdata_escape }}]]>
                    </content:encoded>
                </item>
            {% endif %}
        {% endfor %}
    </channel>
</rss>
